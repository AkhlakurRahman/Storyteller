<h3>Welcome {{user.firstName}} {{user.lastName}}</h3>
<p>Your stories</p>

{{#if stories}}
	<table class="striped">
		<thead>
			<tr>
				<th>Title</th>
				<th>Date</th>
				<th>Status</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{{#each stories}}
				<tr>
					<td><a href="/stories/show/{{id}}">{{title}}</a></td>
					<td>{{formatDate date 'MMM Do YYYY'}}</td>
					<td><span class="status-dash">{{status}}</span></td>
					<td>
						<a href="/stories/edit/{{id}}" class="btn green darken-2 left-align"><i class="fa fa-pencil"></i></a>

						<form action="/stories/delete/{{id}}?_method=DELETE" method="post" id="delete-form">
							<input type="hidden" name="_method" value="DELETE">
							<button type="submit" class="btn red"><i class="fa fa-trash"></i></button>
						</form>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
{{else}}
	<p>You have not created any stories yet.</p>
{{/if}}