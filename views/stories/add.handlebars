<h2>Add Story</h2>

<div class="row">
	<form action="/stories/add" method="post" class="col s12">
		<div class="row">
			<div class="input-field">
				<input type="text" name="title">
				<label for="title">Title</label>
			</div>
		</div>

		<div class="row">
			<div class="input-field">
				<select name="status" id="">
					<option value="public">Public</option>
					<option value="private">Private</option>
					<option value="unpublished">Unpublished</option>
				</select>
				<label for="status">Status</label>
			</div>
		</div>

		<div class="row">
			<p>
				<label>
					<input type="checkbox" name="allowComments" class="filled-in" checked="checked" />
					<span>Allow Comments</span>
				</label>
			</p>
		</div>

		<div class="row">
			<div class="input-field">
				<h5>Tell us your story:</h5>
				<textarea name="story" id="" cols="30" rows="10"></textarea>
			</div>
		</div>

		<input type="submit" value="Publish" class="btn">
	</form>
</div>