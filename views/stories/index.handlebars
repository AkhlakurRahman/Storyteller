<h2>Stories</h2>

<div class="row">
	{{#each stories}}
	<div class="col s12 m6">
		<div class="card blue-grey darken-1">
			<div class="card-image">
				{{#if user }}
					{{{editIcon user.id ../user.id id}}}
				{{/if}}
			</div>
			<div class="card-content white-text">
				<span class="card-title">{{title}}</span>
				<p class="story_text">{{stripTags (truncate story 150)}}</p>
			</div>
			<div class="card-action">
				<div class="chip">
					<img src="{{user.image}}" alt="Contact Person">
					<a href="/stories/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
				</div>
				<a href="/stories/show/{{id}}" class="btn grey right">Read More</a>
			</div>
		</div>
	</div>
	{{/each}}
</div>
